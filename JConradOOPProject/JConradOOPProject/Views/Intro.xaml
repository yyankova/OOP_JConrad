<UserControl x:Class="JConradOOPProject.Views.Intro"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Image Name="IntroBackground" Stretch="Fill" />
        <Grid HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Grid.Resources>
                <Style BasedOn="{StaticResource small-menu-button}" TargetType="{x:Type Button}" />
            </Grid.Resources>
            <StackPanel Orientation="Vertical">
                <TextBlock Name="IntroDescription" TextWrapping="Wrap" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,0,10" FontFamily="Segoe UI Light" FontSize="17" Foreground="White" Text="">
                    <TextBlock.Effect>
                        <DropShadowEffect ShadowDepth="2" Direction="270" Color="Black" Opacity="0.9" BlurRadius="2" />
                    </TextBlock.Effect>
                </TextBlock>
                <Button Content="Continue" IsDefault="True" Margin="0,0,0,15" Click="ButtonContinue_Click" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
